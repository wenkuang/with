<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity table="user_forgot_password" name="Gitonomy\Bundle\CoreBundle\Entity\UserForgotPassword" repository-class="Gitonomy\Bundle\CoreBundle\Entity\Repository\UserForgotPasswordRepository">
        <unique-constraints>
            <unique-constraint name="user_id" columns="user_id" />
        </unique-constraints>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="token" column="token" type="string" length="32" nullable="true" />
        <field name="createdAt" column="creatd_at" type="datetime" nullable="true" />

        <one-to-one field="user" target-entity="Gitonomy\Bundle\CoreBundle\Entity\User">
            <join-columns>
                <join-column name="user_id" referenced-column-name="id" nullable="false" on-delete="CASCADE" />
            </join-columns>
        </one-to-one>
    </entity>

</doctrine-mapping>
