<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Gitonomy\Bundle\CoreBundle\Entity\UserRoleProject" table="user_role_project">
        <unique-constraints>
            <unique-constraint name="user_project" columns="user_id,project_id" />
        </unique-constraints>

        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY" />
        </id>

        <many-to-one field="user" target-entity="Gitonomy\Bundle\CoreBundle\Entity\User" inversed-by="userRolesProject">
            <join-columns>
                <join-column name="user_id" referenced-column-name="id" />
            </join-columns>
        </many-to-one>
        <many-to-one field="role" target-entity="Gitonomy\Bundle\CoreBundle\Entity\Role" inversed-by="userRolesProject">
            <join-columns>
                <join-column name="role_id" referenced-column-name="id" />
            </join-columns>
        </many-to-one>
        <many-to-one field="project" target-entity="Gitonomy\Bundle\CoreBundle\Entity\Project" inversed-by="userRoles">
            <join-columns>
                <join-column name="project_id" referenced-column-name="id" />
            </join-columns>
        </many-to-one>
    </entity>
</doctrine-mapping>
