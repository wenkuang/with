<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <namespace prefix="DoctrineAssert">Symfony\Bridge\Doctrine\Validator\Constraints\</namespace>
    <namespace prefix="Assert">Symfony\Component\Validator\Constraints\</namespace>

    <class name="Gitonomy\Bundle\CoreBundle\Entity\Project">
        <constraint name="DoctrineAssert:UniqueEntity">
            <option name="fields">
                <value>slug</value>
            </option>
        </constraint>
        <constraint name="DoctrineAssert:UniqueEntity">
            <option name="fields">
                <value>name</value>
            </option>
        </constraint>
        <constraint name="Callback">
            <option name="methods">
                <value>
                    <value>Gitonomy\Bundle\CoreBundle\Validation\ProjectValidator</value>
                    <value>isSlugValid</value>
                </value>
            </option>
        </constraint>

        <property name="name">
            <constraint name="Assert:NotBlank" />
        </property>
        <property name="slug">
            <constraint name="Assert:NotBlank" />
        </property>
        <property name="defaultBranch">
            <constraint name="Assert:NotBlank" />
        </property>
    </class>
</constraint-mapping>
