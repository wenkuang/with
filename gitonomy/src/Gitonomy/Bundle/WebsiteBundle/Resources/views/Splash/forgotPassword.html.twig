{% extends "GitonomyWebsiteBundle::layout_splash.html.twig" %}

{% trans_default_domain 'forgot_password' %}

{% block title 'page.title'|trans %}

{% block content %}
    <form method="POST" action="{{ path('splash_postForgotPassword') }}" class="form-horizontal">
        <div class="control-group">
            <div class="controls">
                    <h2>{{ 'title.main'|trans }}</h2>
            </div>
        </div>
        {{ form_row(form) }}
        <div class="control-group">
            <div class="controls">
                <p>
                    <button type="submit" class="btn btn-primary">{{ 'form.submit'|trans }}</button>
                    <a class="btn" href="{{ path('splash_login') }}">{{ 'form.cancel'|trans }}</a>
                </p>
            </div>
        </div>
    </form>
{% endblock %}
