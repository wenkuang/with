{% extends "GitonomyWebsiteBundle::layout.html.twig" %}

{% trans_default_domain 'profile_navigation' %}

{% set global_navigation = 'profile' %}

{% block content %}
    <h1 class="with-menu">
        {{ 'title'|trans }}
    </h1>

    <div id="wrapper">
        <ul id="local-menu">
            <li><a href="{{ path('profile_information') }}"{% if local_navigation == 'information' %} class="active"{% endif %}>{{ 'menu.information'|trans }}</a></li>
            <li><a href="{{ path('profile_sshKeys') }}"{% if local_navigation == 'sshKeys' %} class="active"{% endif %}>{{ 'menu.ssh_keys'|trans }}</a></li>
            <li><a href="{{ path('profile_password') }}"{% if local_navigation == 'password' %} class="active"{% endif %}>{{ 'menu.password'|trans }}</a></li>
        </ul>

        <div id="content" class="with-menu">
            {% block profile_content '' %}
        </div>
    </div>
{% endblock %}
